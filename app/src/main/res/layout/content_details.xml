<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.roberrera.project_2.DetailsActivity"
    tools:showIn="@layout/activity_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/address_detailsActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address"
            android:autoLink = "map"
            android:textStyle="bold"
            android:layout_margin="@dimen/text_margin" />

        <TextView
            android:id="@+id/type_detailsActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Italian"
            android:textStyle="bold"
            android:layout_marginLeft="16dp"
            android:layout_below="@id/address_detailsActivity" />

        <TextView
            android:id="@+id/description_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="Sample text"
            android:layout_below="@id/type_detailsActivity"/>

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:stepSize="1.0"
            android:layout_below="@id/description_textView"/>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
